
<% if author_signed_in? %>
  <% if @post.author == current_author %>
    <%= link_to 'Destroy', post_path, class: 'btn btn-danger btn-lg float-right mb-3', method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
<% end %>

<div class="card">
  <div class="card-body">

    <p>
      <strong>Title:</strong>
      <%= @post.title %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @post.description %>
    </p>
    <%= link_to 'Back', posts_path, class: 'btn btn-secondary btn-lg float-right' %>
  </div>
</div>
